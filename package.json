{
  "name": "lightchat",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "create:module": "tsx scripts/createModule.tsx",
    "remove:module": "cross-env REMOVE_MODULE=true tsx scripts/createModule.tsx",
    "db:migrate": "tsx scripts/migration-runner.tsx",
    "build": "tsc --experimentalDecorators",
    "start": "node dist/app.js",
    "start:dev": "set NODE_OPTIONS=--inspect=0.0.0.0:9229 && nodemon --watch src --ext ts --exec \"tsx watch src/app.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint src migrations --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@sequelize/core": "^7.0.0-alpha.42",
    "@sequelize/postgres": "^7.0.0-alpha.43",
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-jwt": "^7.7.8",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "express-openid-connect": "^2.17.1",
    "figlet": "^1.8.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^2.1.5",
    "morgan": "~1.9.1",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2",
    "sequelize-typescript": "^2.1.6",
    "umzug": "^3.8.2",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.8.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.4.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "esrun": "^3.2.26",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
